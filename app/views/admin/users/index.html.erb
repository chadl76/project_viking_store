


<div class="container">
	<div class="row">
		<div class="col-xs-12 offset-xs-1">
		  <h1 class="text-center">Viking Store Users</h1>
			<table class="table table-striped table-bordered">
				<tr>
				  <th>ID Name</th>
				  <th>Name</th>
				  <th>City</th>
				  <th>State</th>
				  <th>Orders</th>
				  <th>Last Order Date</th>
				  <th>Show</th>
				  <th>Edit</th>
				  <th>Delete</th>
				<tr>
				<% @user.each do |u| %>
				<tr>
					<td><%=u.id%></td>
					<td><%="#{u.first_name} #{u.last_name}" %></td>
					<td><%=u.addresses.first.city.name%></td>
					<td><%=u.addresses.first.state.name %></td>
					<td><%=u.orders.count%></td>
					<td><%=u.orders.last%></td>
					<td><%=link_to 'Show'%></td>
					<td><%=link_to 'Edit'%></td>
					<td><%=link_to 'Delete'%></td>

				</tr>
				<% end %>
			</table>
		</div>
	</div>
</div>