


<div class="container demo_info">
	<div class="row">
		<div class="col-xs-12">
		  <h1 class="text-center">Viking Store Users</h1>

		    <a href="#" class="btn btn-primary btn-lg btn-block" role="button"><%=link_to "Create New User", new_admin_user_path %></a>

		    <%=link_to "Create New User", new_admin_user_path, :class => "btn btn-large btn-primary btn-block"%>

			  <table class="table table-striped table-bordered">
				<tr>
				  <th>ID Name</th>
				  <th>Name</th>
				  <th>City</th>
				  <th>State</th>
				  <th>Orders</th>
				  <th>Last Order Date</th>
				  <th>Show</th>
				  <th>Edit</th>
				  <th>Delete</th>
				<tr>
				<% @user.each do |u| %>
				<tr>
					<td><%=u.id%></td>
					<td><%="#{u.first_name} #{u.last_name}" %></td>
					<td><%=u.addresses.first.city.name%></td>
					<td><%=u.addresses.first.state.name%></td>
					<td><%=u.orders.count%></td>
					<td></td>
					<td><%=link_to 'Show', admin_user_path(u)%></td>
					<td><%=link_to 'Edit', edit_admin_user_path(u)%></td>
					<td><%=link_to 'Delete'%></td>

				</tr>
				<% end %>
			  </table>
		</div>
	</div>
</div>