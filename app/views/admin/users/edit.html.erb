
<div class="containter">
  <div class="row">
  	<h1 class="text-center">Edit User <%="#{@user.id}: #{@user.first_name} #{@user.last_name}"%></h1>
        <div class="col-xs-2 col-xs-offset-3">
    <%= form_for [:admin, @user], html: {class: 'form-horizontal'} do |f| %>

	  <div class="field form-group">
	    <%= f.label :first_name, class: "col-xs-2" %>
	    <%= f.text_field :first_name, class: "col-xs-offset-2" %>
	  </div>

	  <div class="field form-group">
	    <%=f.label :last_name, class: "col-xs-2" %>
	    <%= f.text_field :last_name, class: "col-xs-offset-2"%>
	  </div>

	  <div class="field form-group" %>
	    <%= f.label :email, class: "col-xs-2" %>
	    <%= f.text_field :email, class: "col-xs-offset-2" %>
	  </div>

	   <div class="form-group">
        <%= f.label :billing, :class => "col-md-4 control-label" %>
        <div class="col-md-8">
          <%= f.collection_select :billing_id, Address.where(user_id: @user.id), :id, :street_address, {}, :class => "form-control" %>
        </div>

        <div class="form-group">
        <%= f.label :shipping, :class => "col-md-4 control-label" %>
        <div class="col-md-8">
          <%= f.collection_select :shipping_id, Address.where(user_id: @user.id), :id, :street_address, {}, :class => "form-control" %>
        </div>

        <%=link_to "View Saved Address", admin_user_addresses_path(@user.id) if  @user.id %>








	   <%= f.submit "Update #{@user.first_name} #{@user.last_name}", class: "btn btn-default btn-primary col-xs-8 col-xs-offset-2"%>
	   
	   <%=link_to "Delete #{@user.first_name} #{@user.last_name}", [:admin, @user], :method => :delete, :data => {confirm: "Are you sure?"} if @user.id%>
     <% end %>
     </div>
</div>
</div>