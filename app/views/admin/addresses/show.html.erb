<div class="container">
	<div class="row">
		<div class="col-xs-12">
			<h1 class="text-center"><%="#{@user.first_name} #{@user.last_name}"%>'s Addresses</h1>
			<a href="#" class="btn btn-primary btn-large btn-block" role="button">Create New Address</a>
			<br>
			<table class="table table-striped table-bordered">
				<tr>
					<th>ID</th>
					<th>User</th>
					<th>Address</th>
					<th>City</th>
					<th>State</th>
					<th>Orders</th>
					<th>SHOW</th>
					<th>EDIT</th>
					<th>DELETE</th>
				</tr>
				<% @address.each do |addr| %>
				<tr>
					<td><%=addr.id%></td>
					<td><%="#{addr.user.first_name} #{addr.user.last_name}"%></td>
					<td><%=addr.street_address%></td>
					<td><%=addr.city.name%></td>
					<td><%=addr.state.name%></td>
					<td><%=addr.user.orders.count%></td>
					<td><%=link_to "Show", admin_user_address_path(addr.id, addr.user_id)%></td>
					<td><%=link_to "Edit"%></td>
					<td><%=link_to "Delete"%></td>

				</tr>
				<% end %>
			</table>
		</div>
	</div>
</div>