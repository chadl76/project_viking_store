<div class="container">
	<div class="row">
		<div class="col-xs-12">
			<h1 class="text-center">Product Categories: <%=@category.name %></h1>

			<table class="table table-striped table-bordered">
				<tr>
					<th>ID</th>
					<th>Name</th>
					<th>Show</th>
					<th>Edit</th>
					<th>Delete</th>
				</tr>
				<%@category.products.each do |product| %>
				<tr>
					<td><%=product.id%></td>
					<td><%=product.name%></td>
					<td><%=link_to "Show", admin_product_path(product.id)%></td>
					<td><%=link_to "Edit"%></td>
					<td><%=link_to "Delete"%></td>
				</tr>
				<%end %>
			</table>
		</div>
	</div>
</div>