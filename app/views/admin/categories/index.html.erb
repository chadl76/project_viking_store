<div class="container">
<div class="row">
<div class="col-xs-12 offset-sm-1">
<a href="#" class="btn btn-primary btn-lg btn-block" role="button">Create New Category</a>
	<table class="table table-striped table-bordered">
      		
      		<tr>
      		  <th>Category Name</th>
      		  <th>Category Description</th>
      		  <th>Show</th>
      		  <th>Edit</th>
      		  <th>Delete</th>
      		</tr>
      		<% @categories.each do |cat| %>
      		<tr>
      		  <td><%=cat.name%></td>
      		  <td><%=cat.description%></td>
      		  <td><%=link_to 'Show'%></td>
      		  <td><%=link_to 'Edit'%></td>
      		  <td><%=link_to 'Delete'%></td>
      		</tr>

      		<% end %>
      </table>
</div>
</div>
</div>


<%=@categories.inspect%>