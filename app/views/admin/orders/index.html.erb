
<div class="container">
	<div class="row">
		<div class="col-xs-12">
			<h1 class="text-center">All Orders</h1>
			<p class="text-center">Create new orders within <%=link_to "User"%> profiles</p>
			<br>
			<table class="table table-striped table-bordered">
				<tr>
					<th>ID</th>
					<th>UserID</th>
					<th>Address</th>
					<th>City</th>
					<th>State</th>
					<th>Total Value</th>
					<th>Date Placed</th>
					<th>Show</th>
					<th>Edit</th>
					<th>Delete</th>
				</tr>
				<tr>
					<%@orders.each do |order| %>
					<td><%=order.id%></td>
					<td><%=link_to "#{order.user_id}", admin_user_orders_path(order.user_id)%></td>
					<td><%=order.shipping_address.street_address%></td>
					<td><%=order.shipping_address.city.name%></td>
					<td><%=order.shipping_address.state.name%></td>
					<td><%="$#{order.value}"%></td>
					<td><%=order.created_at%></td>
					<td><%=link_to "Show", admin_user_order_path(order.user_id, order.id)%></td>
					<td><%=link_to "Edit" %></td>
					<td><%=link_to "Delete" %></td>
				</tr>
					<% end %>
			</table>
		</div>
	</div>
</div>