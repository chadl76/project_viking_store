<div class="container">
  <div class="row">
    <div class="col-xs-12 offset-sm-1">
     <%=link_to "Add a new Product", new_admin_product_path, :class => "btn btn-primary btn-large btn-block"%>
	    <table class="table table-striped table-bordered">
        
      	  <tr>
      	    <th>Product ID</th>
      	    <th>Product Name</th>
      	    <th>Product Price</th>
      	    <th>Product Description</th>
            <th>Show</th>
            <th>Edit</th>
            <th>Delete</th>
      	  </tr>
      	  <% @products.each do |prod| %>
      	  <tr>
      	  	<td><%=prod.id%></td>
      	    <td><%=prod.name%></td>
      	    <td><%="$#{prod.price}"%></td>
      		<td><%=prod.description%></td>
      		<td><%=link_to 'Show', admin_product_path(prod.id)%></td>
      		<td><%=link_to 'Edit', edit_admin_product_path(prod.id) %></td>
      		<td><%=link_to 'Delete'%></td>
      	</tr>
         <% end %>
      </table>
    </div>
  </div>
</div>
